@using MaximApp.ViewModels
@model LoginVM
<div class="bg-secondary rounded h-100 p-4" style="margin-top:50px">
    <h6 class="mb-4">Login</h6>
    <form method="post">
       
        <div class="mb-3" style="width:50%">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control">
            <span asp-validation-for="Email" style="color:red"></span>


        </div>
        <div class="mb-3" style="width:50%">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" style="color:red"></span>

        </div>
        <div class="mb-3 form-check">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
            <label asp-for="RememberMe" class="form-check-label" for="exampleCheck1">Check me out</label>


        </div>
        <div asp-validation-summary="All"></div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>
