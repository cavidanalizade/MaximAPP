@using MaximApp.ViewModels
@model RegisterUserVM
<div class="bg-secondary rounded h-100 p-4" style="margin-top:50px">
    <h6 class="mb-4">Register</h6>
    <form method="post">
        <div class="mb-3" style="width:50%">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" >
            <span asp-validation-for="Name" style="color:red"></span>

        </div>
        <div class="mb-3" style="width:50%">
            <label asp-for="Surname" class="form-label">Surname</label>
            <input asp-for="Surname" type="text" class="form-control">
            <span asp-validation-for="Surname" style="color:red"></span>


        </div>
        <div class="mb-3" style="width:50%">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" type="text" class="form-control">
            <span asp-validation-for="Username" style="color:red"></span>


        </div>
        <div class="mb-3" style="width:50%">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control">
            <span asp-validation-for="Email" style="color:red"></span>


        </div>
        <div class="mb-3" style="width:50%">
            <label asp-for="Password"  class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" style="color:red"></span>

        </div>
        <div class="mb-3" style="width:50%">
            <label asp-for="ConfirmPassword" class="form-label">Repeat Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control">
            <span asp-validation-for="ConfirmPassword" style="color:red"></span>

        </div>
        <div asp-validation-summary="All"></div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
